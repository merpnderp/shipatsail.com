service cloud.firestore {
  match /databases/{database}/documents {
    //match /{document=**} {
    //  allow read, write: if false;
    //}
    match /users/{userID=**} {
    	allow read, write: if request.auth.uid == userID;
    }
    match /users/{userID}/folders/{folderID=**} {
    	allow read, write: if request.auth.uid == userID;
    }
  }
}
